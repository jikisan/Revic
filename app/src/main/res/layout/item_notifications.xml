<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:background="#56D3D3D3">

    <TextView
        android:id="@+id/tv_notifType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/LOADING"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notifDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LOADING"
        android:textColor="@color/dark_orange"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_notifType"
        app:layout_constraintTop_toBottomOf="@+id/tv_notifType" />

    <TextView
        android:id="@+id/tv_notifMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/LOADING"
        android:textColor="@color/black"
        android:paddingRight="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_notifDateTime"
        app:layout_constraintTop_toBottomOf="@+id/tv_notifDateTime" />


</androidx.constraintlayout.widget.ConstraintLayout>